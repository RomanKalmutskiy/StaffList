<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="staff">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="employe" minOccurs="1" maxOccurs="unbounded">

					<xs:complexType>
						<xs:sequence>
							<xs:element name="type" type="xs:string" minOccurs="1"
								maxOccurs="1" />
							<xs:element name="name" type="xs:string" minOccurs="1"
								maxOccurs="1" />
							<xs:element name="surname" type="xs:string" minOccurs="1"
								maxOccurs="1" />
							<xs:element name="patronymic" type="xs:string"
								minOccurs="1" maxOccurs="1" />
							<xs:element name="birthDate" type="xs:string"
								minOccurs="1" maxOccurs="1" />
							<xs:element name="hireDate" type="xs:string"
								minOccurs="1" maxOccurs="1" />
							<xs:element name="description" type="xs:string"
								minOccurs="0" maxOccurs="1" />
							<xs:element name="workersOfManager" minOccurs="0"
								maxOccurs="1" />
						</xs:sequence>
						<xs:attribute name ="id"  type = "xs:string"/>
					</xs:complexType>
				</xs:element>

			</xs:sequence>
		</xs:complexType>
	</xs:element>

</xs:schema>